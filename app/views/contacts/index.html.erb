<h1>Contacts</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Is favorite</th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= link_to contact.name, contact %></td>
    <td><%= contact.phone %></td>
    <td><%= contact.is_favorite %></td>
    <td>
      <%#= link_to 'Show', contact, :class => "btn" %>
      <%= link_to 'Edit', edit_contact_path(contact), :class => "btn" %>
      <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" %>
    </td>
  </tr>
<% end %>
</table>

<br />

